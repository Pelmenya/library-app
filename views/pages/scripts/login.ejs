<script>
    document.addEventListener("DOMContentLoaded", () => {
        let isFormLogin = true;
        const { signup, login } = document.forms;
        const navBtn = document.querySelector('#nav');
        
        if (signup && login) signup.style.display = 'none';

        const toggle = () => {
            isFormLogin = !isFormLogin;
            switch (isFormLogin) {
                case false:
                    signup.style.display = 'block';
                    login.style.display = 'none';
                    navBtn.textContent = 'Войти';
                    break;
                case true:
                    signup.style.display = 'none';
                    login.style.display = 'block';
                    navBtn.textContent = 'Зарегистрироваться';
                    break;
                default:
                    break;
            }
        }

        if (new URL(document.URL).search) {
            toggle();   
        } 

        navBtn.addEventListener('click', toggle);
    });
</script>