{
  "name": "library-app",
  "version": "1.0.0",
  "description": "Library application on Express.js",
  "main": "server.js",
  "scripts": {
    "test": "jest --passWithNoTests",
    "eslint": "eslint . --fix",
    "build": "./node_modules/.bin/tsc",
    "compile": "tsc --noEmit",
